import("//build/ohos.gni")
import("//build/ohos/sa_profile/sa_profile.gni")

ohos_sa_profile("face_auth_sa_profile") {
  sources = [ "942.xml" ]
  part_name = "faceauth"
}

ohos_prebuilt_etc("face_auth_service.init") {
  if (use_musl) {
    source = "face_auth_service.cfg"
